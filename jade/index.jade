doctype html
html(lang="en")
	head
		title Norstar: Recycle Contaminated Soils
		// Style. will prevent flout - styles reset in actual stylesheets
		style.
			h1, p, a, #logo, .icon {
				visibility: hidden;
			}
			body {
				background: url('img/park.svg') 100% / cover  no-repeat;
			}
		noscript
			// Load Stylesheet for when JS is disabled
			link(rel='stylesheet' href='css/noJS.min.css')
		script.
			// Load Style sheet when JS is enabled
			var cb = function() {
			var l = document.createElement('link'); l.rel = 'stylesheet';
			l.href = 'css/cat.min.css';
			var h = document.getElementsByTagName('head')[0]; h.parentNode.insertBefore(l, h);
			};
